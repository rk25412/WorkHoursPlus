@page "/login"
@layout WorkHourPlus.Components.Auth.Shared.LoginLayout

<EditForm Model="LoginModel" OnValidSubmit="@HandleSubmit" FormName="LoginForm">
  @if (!string.IsNullOrEmpty(_errorMessage))
  {
    <h4 class="my-3">@_errorMessage</h4>
  }
  <DataAnnotationsValidator/>
  <div class="form-outline mb-4">
    <InputText class="form-control form-control-lg" @bind-value="@LoginModel!.Username"/>
    <label class="form-label">Username</label>
    <ValidationMessage For="() => LoginModel!.Username"/>
  </div>

  <div class="form-outline mb-4">
    <InputText type="password" class="form-control form-control-lg" @bind-value="@LoginModel!.Password"/>
    <label class="form-label">Password</label>
    <ValidationMessage For="() => LoginModel!.Password"/>
  </div>

  <div class="d-flex justify-content-around align-items-center mb-4">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" checked/>
      <label class="form-check-label">Remember me </label>
    </div>
    <a href="javascript:void(0)">Forgot password?</a>
  </div>

  <button type="submit" class="btn btn-primary btn-lg btn-block">
    Sign in
  </button>
</EditForm>